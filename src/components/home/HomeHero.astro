---
type Tone =
  | "core"
  | "secondary"
  | "philosophy"
  | "interaction"
  | "architecture"
  | "quality";

type Tag = { label: string; tone: Tone; hint: string };

const TAGS: Tag[] = [
  { label: "React", tone: "core", hint: "Component-first UI composition." },
  {
    label: "Next.js",
    tone: "core",
    hint: "SSR + routing + production structure.",
  },
  { label: "TypeScript", tone: "core", hint: "Type-driven UI contracts." },
  {
    label: "Tailwind",
    tone: "core",
    hint: "Tokenized styling with fast iteration.",
  },
  {
    label: "Vue",
    tone: "core",
    hint: "Reactive UI patterns and clean ergonomics.",
  },

  {
    label: "Figma",
    tone: "secondary",
    hint: "Design handoff, layout, and tokens.",
  },
  {
    label: "PostgreSQL",
    tone: "secondary",
    hint: "Relational data modeling + queries.",
  },
  {
    label: "REST APIs",
    tone: "secondary",
    hint: "Stable endpoints and clear contracts.",
  },
  {
    label: "WebSockets",
    tone: "secondary",
    hint: "Realtime sync, events, optimistic flows.",
  },

  {
    label: "State -> Flow -> Feedback",
    tone: "philosophy",
    hint: "State transitions first, feedback always.",
  },
  {
    label: "Explicit State",
    tone: "philosophy",
    hint: "Every UI state has a name + rule.",
  },
  {
    label: "Predictable UI",
    tone: "philosophy",
    hint: "No surprises -> clear next step.",
  },

  {
    label: "UI Interactions",
    tone: "interaction",
    hint: "Interactions that communicate intent + result.",
  },
  {
    label: "Micro-interactions",
    tone: "interaction",
    hint: "Tiny cues that improve clarity.",
  },
  {
    label: "Optimistic UI",
    tone: "interaction",
    hint: "Instant feedback while server catches up.",
  },
  {
    label: "Rollback Handling",
    tone: "interaction",
    hint: "Recover gracefully when actions fail.",
  },

  {
    label: "Component-driven",
    tone: "architecture",
    hint: "Reusable building blocks with boundaries.",
  },
  {
    label: "Design Systems",
    tone: "architecture",
    hint: "Tokens + primitives + patterns that scale.",
  },
  {
    label: "Separation of Concerns",
    tone: "architecture",
    hint: "UI, state, domain stay decoupled.",
  },

  {
    label: "Type-safe",
    tone: "quality",
    hint: "Fewer runtime surprises through strict types.",
  },
  {
    label: "Scalable",
    tone: "quality",
    hint: "Structure that holds as features grow.",
  },
  {
    label: "Maintainable",
    tone: "quality",
    hint: "Readable, change-friendly codebases.",
  },
];

const TONE_CLASS: Record<Tone, string> = {
  philosophy:
    "bg-brand-mint/12 border-brand-mint/40 text-ink-main font-semibold italic hover:bg-brand-mint/18",
  core: "text-ink-main font-medium",
  interaction: "text-ink-main/90",
  secondary: "text-ink-sub text-xs",
  architecture: "text-ink-sub/80 text-xs",
  quality: "text-ink-sub/60 text-xs italic",
};
---

<section
  class="bg-space-900 flex min-h-[calc(100dvh-var(--site-header))] flex-col justify-between px-6 py-10 md:px-8 md:py-12"
>
  <div class="mx-auto w-full max-w-5xl">
    <p class="text-ink-sub text-xs tracking-widest uppercase">dvmbr > home</p>

    <h1
      class="text-brand-red relative z-0 mt-6 text-6xl leading-none font-black tracking-tight uppercase transition duration-700 hover:-translate-y-0.5 md:text-7xl lg:text-8xl"
    >
      <span class="hero-shimmer">engineered</span><br />
      <span class="hero-shimmer">under control</span>
    </h1>

    <div class="mt-8 flex flex-wrap gap-2">
      {
        TAGS.map(({ label, tone, hint }) => (
          <span class="tag group">
            <span tabindex="0" class={`tag-pill ${TONE_CLASS[tone]}`}>
              {label}
            </span>

            <span class="tag-tooltip" role="tooltip">
              <span class="tag-tooltip__title">{label}</span>
              <span class="tag-tooltip__desc">{hint}</span>
              <span class="tag-tooltip__arrow" />
            </span>
          </span>
        ))
      }
    </div>
  </div>

  <div class="mx-auto w-full max-w-5xl">
    <div
      class="flex flex-col items-start justify-between gap-8 md:flex-row md:items-end"
    >
      <p
        class="max-w-md text-base leading-relaxed font-medium motion-safe:transition motion-safe:duration-500 motion-safe:ease-out motion-safe:hover:-translate-y-0.5 md:text-lg"
      >
        <span class="text-ink-main block">
          This is an archive of how I think about systems.
        </span>

        <span class="text-ink-sub/90 mt-1 block">
          Beyond how they appear.
        </span>

        <span class="mt-6 block">
          <span
            class="border-divider text-ink-sub/80 inline-flex items-center gap-3 rounded-full border px-3 py-1 text-xs font-bold tracking-[0.28em] uppercase transition duration-300 hover:border-white/15 hover:bg-white/5"
          >
            <span
              class="bg-brand-mint h-1.5 w-1.5 rounded-full motion-safe:animate-[breathe_2.8s_ease-in-out_infinite]"
            ></span>
            Interfaces · Structures · Ideas
          </span>
        </span>

        <span
          class="border-divider text-ink-sub/80 hover:text-ink-sub mt-3 block border-l pl-4 text-sm italic transition duration-300 hover:border-white/20"
        >
          Exploring from the inside out.
        </span>
      </p>

      <a
        href="/projects"
        class="bg-brand-mint text-space-900 focus-visible:ring-brand-mint/40 mb-1 rounded-full px-10 py-4 text-base font-black transition duration-300 ease-out hover:-translate-y-0.5 hover:bg-white focus-visible:ring-2 focus-visible:outline-none motion-safe:hover:shadow-[0_14px_40px_rgba(103,255,240,0.18)]"
      >
        Projects
      </a>
    </div>
  </div>
</section>
<style>
  .hero-shimmer {
    background: linear-gradient(
      90deg,
      rgba(255, 49, 49, 1) 0%,
      rgba(103, 255, 240, 0.9) 45%,
      rgba(255, 49, 49, 1) 85%
    );
    background-size: 220% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: heroShimmer 7s ease-in-out infinite alternate;
    text-shadow: 0 0 18px rgba(255, 49, 49, 0.18);
  }

  @keyframes heroShimmer {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 220% 50%;
    }
  }

  /* ---------- Tag wrapper ---------- */
  .tag {
    position: relative;
    display: inline-flex;
  }

  /* ---------- Pill ---------- */
  .tag-pill {
    /* shape */
    border-radius: 9999px;
    border-width: 1px;
    border-style: solid;
    border-color: var(--color-stroke-dim, rgba(255, 255, 255, 0.05));

    /* spacing / typography */
    padding: 0.25rem 0.75rem;
    line-height: 1.25rem;
    font-size: 0.875rem;

    /* motion */
    transition-property: transform, background-color, border-color;
    transition-duration: 150ms;
    transition-timing-function: ease-out;
  }

  .tag-pill:hover,
  .group:hover .tag-pill,
  .tag-pill:focus-visible,
  .group:focus-within .tag-pill {
    transform: translateY(-1px);
    border-color: var(--color-stroke-bright, rgba(255, 255, 255, 0.2));
    background-color: rgba(255, 255, 255, 0.04);
    outline: none;
  }

  /* 키보드 포커스 링(선택) */
  .tag-pill:focus-visible {
    box-shadow: 0 0 0 2px rgba(103, 255, 240, 0.25);
  }

  /* ---------- Tooltip ---------- */
  .tag-tooltip {
    position: absolute;
    top: 100%;
    left: 50%;
    z-index: 50;

    margin-top: 0.5rem;
    width: max-content;
    max-width: 16rem;

    transform: translateX(-50%) translateY(4px) scale(0.98);
    opacity: 0;
    pointer-events: none;

    /* box */
    padding: 0.5rem 0.75rem;
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);

    /* background */
    background: rgba(3, 3, 4, 0.9); /* space-950 느낌 */
    backdrop-filter: blur(12px);

    /* text */
    color: rgba(255, 255, 255, 0.9);
    font-size: 12px;
    line-height: 1.25;

    /* shadow */
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);

    /* motion */
    transition-property: opacity, transform;
    transition-duration: 200ms;
    transition-timing-function: ease-out;
  }

  .group:hover .tag-tooltip,
  .group:focus-within .tag-tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(0) scale(1.02);
  }

  /* ---------- Tooltip text ---------- */
  .tag-tooltip__title {
    display: block;
    font-size: 11px;
    font-weight: 800;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
  }

  .tag-tooltip__desc {
    display: block;
    margin-top: 0.25rem;
    color: rgba(255, 255, 255, 0.9);
  }

  /* ---------- Tooltip arrow ---------- */
  .tag-tooltip__arrow {
    position: absolute;
    top: 0;
    left: 50%;

    width: 0.5rem;
    height: 0.5rem;

    transform: translate(-50%, -50%) rotate(45deg);

    background: rgba(3, 3, 4, 0.9);
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    border-top: 1px solid rgba(255, 255, 255, 0.1);

    opacity: 0;
    transition: opacity 200ms ease-out;
  }

  .group:hover .tag-tooltip__arrow,
  .group:focus-within .tag-tooltip__arrow {
    opacity: 1;
  }

  @keyframes breathe {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.55;
    }
    50% {
      transform: scale(1.6);
      opacity: 1;
    }
  }

  /* 모션 줄이기 */

  @media (prefers-reduced-motion: reduce) {
    .hero-shimmer {
      animation: none;
    }

    .tag-pill,
    .tag-tooltip,
    .tag-tooltip__arrow {
      transition: none;
    }
    .tag-pill:hover,
    .tag-pill:focus-visible,
    .group:hover .tag-pill,
    .group:focus-within .tag-pill {
      transform: none;
    }
    .group:hover .tag-tooltip,
    .group:focus-within .tag-tooltip {
      transform: translateX(-50%);
    }
  }
</style>
