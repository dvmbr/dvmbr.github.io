---
const stacks = [
  "TypeScript",
  "React",
  "Next.js",
  "Vue",
  "Node.js",
  "WebSocket",
  "PostgreSQL",
  "Prisma",
  "Tailwind CSS",
  "Bootstrap",
  "Spring Boot",
  "JSP",
  "PHP",
  "Figma",
];
---

<section class="mt-6 w-full">
  <h2 class="text-ink-sub mb-3 text-xs tracking-widest uppercase">
    Tech Stack
  </h2>

  <ul class="flex flex-wrap gap-2">
    {
      stacks.map((tech) => (
        <li class="border-stroke-dim text-ink-sub hover:border-stroke-bright hover:text-ink-main rounded-full border px-3 py-1 text-xs transition">
          {tech}
        </li>
      ))
    }
  </ul>
</section>
