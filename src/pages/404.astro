---
import BaseHead from "../components/BaseHead.astro";
import "../styles/global.css";

const title = "404 - Not Found";
const description = "The page you’re looking for doesn’t exist.";
---

<!doctype html>
<html lang="en">
  <BaseHead title={title} description={description} />
  <body>
    <main class="bg-space-950 mx-auto min-h-dvh max-w-3xl px-6 py-24">
      <h1 class="text-4xl font-bold">{title}</h1>
      <p class="text-text-muted mt-4">
        {description}
      </p>

      <a
        href="/"
        class="border-border hover:bg-bg-elevate mt-10 inline-block rounded-lg border px-4 py-2"
      >
        Go home
      </a>
    </main>
  </body>
</html>
